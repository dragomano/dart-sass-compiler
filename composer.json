{
  "name": "bugo/dart-sass-compiler",
  "description": "PHP compiler for SCSS/Sass to CSS",
  "keywords": [
    "scss php",
    "sass php",
    "scss compiler",
    "sass compiler",
    "dart sass php"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bugo",
      "email": "bugo@dragomano.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "DartSass\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "bugo/sass-embedded-php": "^0.4",
    "dg/bypass-finals": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.92",
    "mockery/mockery": "dev-bugfix/spy-generics",
    "monolog/monolog": "^3.10",
    "pestphp/pest": "^3.8|^4.3",
    "rector/rector": "^2.3",
    "scssphp/scssphp": "^2.1",
    "symfony/var-dumper": "^7.4|^8.0"
  },
  "scripts": {
    "fix": "vendor/bin/php-cs-fixer fix",
    "test-fix": "vendor/bin/php-cs-fixer check",
    "rector": "vendor/bin/rector process --clear-cache",
    "check": "vendor/bin/rector process --dry-run --clear-cache",
    "benchmark": "php benchmark.php",
    "tests": "vendor/bin/pest --colors=always --display-warnings",
    "tests-coverage": "vendor/bin/pest --colors=always --coverage --min=100",
    "tests-coverage-clover": "vendor/bin/pest --colors=always --min=100 --coverage-clover coverage.xml",
    "tests-coverage-html": "vendor/bin/pest --colors=always --min=100 --coverage-html coverage",
    "tests-mutate": "vendor/bin/pest --colors=always --mutate --covered-only -d memory_limit=1G --path=src/Utils/SourceMapGenerator.php"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "bugo/sass-embedded-php": true,
      "pestphp/pest-plugin": true
    }
  }
}
